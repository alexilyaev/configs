{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "plugins": [{ "name": "next" }],
    "paths": {
      "~/*": ["${configDir}/src/*"]
    }
  },
  "include": [
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx",
    "${configDir}/**/*.json",
    "${configDir}/src/env.js",
    "${configDir}/.next/types/**/*.ts"
  ],
  "exclude": ["${configDir}/node_modules", "${configDir}/.next"]
}
